<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SecureMessenger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:windowBackground">@color/dark_blue</item>
    </style>

    <style name="SecureMessenger.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="SecureMessenger.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="BaseBtnWidgetStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bcg_ripple_green_rounded_10</item>
    </style>

</resources>